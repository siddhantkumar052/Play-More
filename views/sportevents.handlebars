<section id="sport-events">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Sport events</h1>
            </div>
        </div>

        <div class="row">
            {{#each events}}
            <div class="col-md-4 col-sm-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <img src="{{image}}" class="card-img-top" alt="...">
                        <h5 class="card-title">{{playgroundName}}</h5>
                        <p class="card-text">{{sport}}</p>
                        <p class="card-text">{{location}}</p>
                        <p class="card-text">{{timing}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>